---
import Logo from '../assets/logo.webp';
---
<main class="relative min-h-screen flex flex-col items-center justify-center text-white text-center px-4 overflow-hidden">
  <!-- Fondo animado -->
  <!-- <div class="absolute inset-0 bg-gradient-to-br from-[#0a0a0a] via-[#112233] to-[#0a0a0a] animate-gradient opacity-90 z-[-1]"></div> -->
  <div class="absolute inset-0 bg-black z-[-1]"></div>

  <!-- Logo -->
  <img
    src={Logo.src}
    alt="Logo Quickland"
    class="w-40 h-40 rounded-full border-4 shadow-xl mt-6"
    style="border-color: #55ffff; box-shadow: 0 0 20px #55ffff80;"
  />

  <!-- Título -->
  <h1 class="text-5xl sm:text-6xl font-extrabold mt-8 bg-gradient-to-r from-[#55ffff] to-[#33cccc] bg-clip-text text-transparent drop-shadow-lg">
    ¡Únete a Quickland!
  </h1>

  <p class="mt-6 text-lg sm:text-xl max-w-2xl text-gray-200">
    Vive una aventura survival inolvidable. Eventos, economía, protección y una comunidad activa te esperan.
  </p>

  <!-- IPs -->
  <div class="mt-12 space-y-4 text-lg sm:text-xl">
    <!-- Java -->
    <div class="relative inline-block text-center">
      <button
        id="copy-java"
        aria-label="Copiar IP Java"
        class="cursor-pointer select-none inline-flex items-center px-6 py-3 bg-[#111111] rounded-full border border-[#55ffff] shadow-md hover:bg-[#222222] hover:shadow-[#55ffff]/50 transition-all"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#55ffff] mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16h8m-4-4h4m-4-4h4M4 6h16M4 10h4m-4 4h4m-4 4h16" />
        </svg>
        <span class="text-[#55ffff] font-semibold">quickland.net</span>
      </button>
      <span id="tooltip-java" class="absolute -top-10 left-1/2 transform -translate-x-1/2 text-sm bg-[#111111] text-[#55ffff] border border-[#55ffff] px-3 py-1 rounded-full opacity-0 transition-opacity duration-300 pointer-events-none">
        ¡Copiado!
      </span>
    </div>

    <!-- Bedrock -->
    <div class="relative inline-block text-center">
      <button
        id="copy-bedrock"
        aria-label="Copiar IP Bedrock"
        class="cursor-pointer select-none inline-flex items-center px-6 py-3 bg-[#111111] rounded-full border border-[#33cccc] shadow-md hover:bg-[#1a1a1a] hover:shadow-[#33cccc]/50 text-[#33cccc] font-medium transition-all"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#33cccc] mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4a2 2 0 0 0 1-1.73z" />
        </svg>
        bedrock.quickland.net | 19132
      </button>
      <span id="tooltip-bedrock" class="absolute -top-10 left-1/2 transform -translate-x-1/2 text-sm bg-[#111111] text-[#33cccc] border border-[#33cccc] px-3 py-1 rounded-full opacity-0 transition-opacity duration-300 pointer-events-none">
        ¡Copiado!
      </span>
    </div>
  </div>

  <!-- Discord & Tienda -->
  <div class="space-y-4 text-lg sm:text-xl">
    <!-- Discord -->
    <a href="https://discord.quickland.net" target="_blank" class="inline-flex items-center px-6 py-3 bg-[#111111] rounded-full border border-[#7289DA] shadow-md hover:bg-[#1a1a1a] hover:shadow-[#7289DA]/60 transition-all">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#7289DA] mr-2" viewBox="0 0 127.14 96.36" fill="currentColor">
        <path d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z" />
      </svg>
      <span class="text-[#7289DA] font-semibold">Discord</span>
    </a>

    <!-- Tienda -->
    <a href="https://tienda.quickland.net" target="_blank" class="inline-flex items-center px-6 py-3 bg-[#111111] rounded-full border border-[#f59e0b] shadow-md hover:bg-[#1a1a1a] hover:shadow-[#f59e0b]/60 transition-all">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#f59e0b] mr-2" viewBox="0 0 24 24" fill="currentColor">
        <path d="M3 3h18v2H3V3zm0 4h18v2H3V7zm0 4h12v2H3v-2zm0 4h12v2H3v-2zm0 4h12v2H3v-2zm14 0h4v2h-4v-2zm0-4h4v2h-4v-2zm0-4h4v2h-4v-2z" />
      </svg>
      <span class="text-[#f59e0b] font-semibold">Tienda</span>
    </a>
  </div>
</main>

<script>
  function showTooltip(id: string, text: string) {
    const tooltip = document.getElementById(id);
    if (!tooltip) return;
    tooltip.innerText = text;
    tooltip.classList.remove('opacity-0');
    tooltip.classList.add('opacity-100');
    setTimeout(() => {
      tooltip.classList.add('opacity-0');
      tooltip.classList.remove('opacity-100');
    }, 1500);
  }

  document.addEventListener("DOMContentLoaded", () => {
    const copyJavaBtn = document.getElementById("copy-java");
    if (copyJavaBtn) {
      copyJavaBtn.addEventListener("click", () => {
        navigator.clipboard.writeText("quickland.net").then(() => showTooltip("tooltip-java", "¡Copiado!"));
      });
    }

    const copyBedrockBtn = document.getElementById("copy-bedrock");
    if (copyBedrockBtn) {
      copyBedrockBtn.addEventListener("click", () => {
        navigator.clipboard.writeText("bedrock.quickland.net").then(() => showTooltip("tooltip-bedrock", "¡Copiado!"));
      });
    }
  });
</script>